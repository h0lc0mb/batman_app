<% provide(:title, 'All questions') %>
<h1>All questions</h1>
<center>
	<b>
		<font size="4">
			<%= link_to "View pending questions", pending_path %>
			&nbsp &nbsp
			<%= link_to "View answered questions", answered_path %>
		</font>
	</b>
</center>

<ul class="posts">
	<% @posts.each do |post| %>
		<li>
			<%= post.content %>
			<br>
			<%= link_to "Answer this question", post %>
		</li>
	<% end %>
</ul>

<%= will_paginate %>