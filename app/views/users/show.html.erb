<% provide(:title, @user.name) %>
<div class="row">
	<aside class="span4">
		<section>
			<h1>
				<%= @user.name %>
			</h1>
		</section>
	</aside>
	<div class="span8">
		<% if @user.posts.any? %>
			<h3>Answered questions</h3>
			<ol class="posts">
				<%#= render @posts %>
				<%= render 'posts/answered_post', collection: @posts %>
			</ol>
			<%#= will_paginate @posts %>
		<% end %>
	</div>
</div>